<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" styleClass="background" stylesheets="@Common.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.view.graphical.commodity.AuctionPage">
    <children>
        <ImageView fitHeight="320.0" fitWidth="240.0" layoutX="85.0" layoutY="51.0" pickOnBounds="true"
                   preserveRatio="true" AnchorPane.leftAnchor="85.0" AnchorPane.topAnchor="50.0"/>
        <VBox layoutX="419.0" layoutY="50.0" prefHeight="320.0" prefWidth="600.0" spacing="10.0"
              AnchorPane.leftAnchor="400.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label fx:id="name" styleClass="scene-title" text="Name"/>
                <Label fx:id="brand" styleClass="hint-label" text="Brand"/>
                <Label fx:id="originalPrice" styleClass="hint-label" text="Original Price"/>
                <Label fx:id="topBidder" styleClass="hint-label" text="Top Bidder"/>
                <Label fx:id="topBid" styleClass="hint-label" text="Top Bid"/>
                <HBox prefHeight="57.0" prefWidth="600.0" spacing="10.0">
                    <children>
                        <TextField fx:id="offerTF" alignment="CENTER" prefHeight="57.0" prefWidth="294.0"
                                   promptText="Your Offer" styleClass="text-field"/>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit"
                                styleClass="normal-button-Green" text="Submit Offer"/>
                    </children>
                </HBox>
                <Label styleClass="error-message-label" fx:id="error"/>
            </children>
        </VBox>
        <Button layoutX="14.0" layoutY="761.0" mnemonicParsing="false" styleClass="back-button" text="Back"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
        <Button layoutX="59.0" layoutY="689.0" mnemonicParsing="false" styleClass="logout-button" text="Log Out"
                AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="10.0"/>
    </children>
</AnchorPane>
