<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="600.0" minWidth="600.0" styleClass="popup-pane" stylesheets="@../Common.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.graphical.AddProduct">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onCancelClick" styleClass="close-button"
                 text="Cancel"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#onAddClick" mnemonicParsing="false" styleClass="add-button" text="Add"/>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <Label styleClass="scene-title" text="Add new product" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
         <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Brand :"/>
               <TextField fx:id="brandTf" prefHeight="35.0" prefWidth="235.0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="170.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Name :"/>
               <TextField fx:id="nameTf" prefHeight="35.0" prefWidth="235.0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Price :"/>
               <TextField fx:id="priceTf" prefHeight="35.0" prefWidth="235.0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="20.0" minHeight="200.0" prefHeight="162.0"
                  prefWidth="536.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Description :"/>
               <TextArea fx:id="descriptionTextArea" prefHeight="130.0" prefWidth="364.0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="150.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Amount :"/>
               <TextField fx:id="amountTf" prefHeight="35.0" prefWidth="235.0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="387.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Button mnemonicParsing="false" onMouseClicked="#onChooseProductImageClick"
                       styleClass="small-button" text="Choose product image"/>
               <Button mnemonicParsing="false" onMouseClicked="#onChooseProductVideoClick"
                       styleClass="small-button" text="Choose product video"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="215.0" prefHeight="162.0" prefWidth="536.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Selected media :"/>
               <TreeView fx:id="selectedMediaTv" minHeight="200.0" prefHeight="200.0" prefWidth="200.0"
                         styleClass="text-area" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="387.0" prefHeight="35.0" prefWidth="518.0"
                  spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label styleClass="hint-label" text="Category :"/>
               <ComboBox fx:id="categoryCb" prefHeight="35.0" prefWidth="416.0" promptText="Choose a category ..."
                         styleClass="text-field" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="515.0" onMouseClicked="#onAddClick" prefHeight="35.0"
                  prefWidth="518.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
               <Label fx:id="errorMessageLabel" styleClass="error-message-label" text="Enter product information"/>
            </HBox>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
