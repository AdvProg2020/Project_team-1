<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1200.0"
            stylesheets="@Common.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="view.graphical.Customer">
    <children>
        <BorderPane prefHeight="800.0" prefWidth="1200.0">
            <top>
                <Label styleClass="scene-title" text="Customer panel" BorderPane.alignment="CENTER"/>
            </top>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <left>
                <VBox alignment="BOTTOM_CENTER" spacing="10.0" BorderPane.alignment="BOTTOM_CENTER">
                    <children>
                        <Button mnemonicParsing="false" styleClass="logout-button" text="Logout"/>
                        <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" styleClass="back-button" text="Back"
                                textAlignment="CENTER" onMouseClicked="#onBackButtonClick"/>
                    </children>
                    <opaqueInsets>
                        <Insets top="10.0"/>
                    </opaqueInsets>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </left>
            <right>
                <VBox alignment="BOTTOM_CENTER" spacing="10.0" BorderPane.alignment="BOTTOM_CENTER">
                    <children>
                        <Button mnemonicParsing="false" styleClass="forward-button" text="Cart"/>
                        <Button mnemonicParsing="false" styleClass="forward-button" text="Products"
                                onMouseClicked="#onCartButtonClick"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                </VBox>
            </right>
            <center>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="hint-label" text="Username:" GridPane.halignment="CENTER"
                               GridPane.valignment="CENTER"/>
                        <Label styleClass="hint-label" text="First name:" GridPane.halignment="CENTER"
                               GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                        <Label styleClass="hint-label" text="Last name:"
                               GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
                        <Label styleClass="hint-label" text="Email:" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                               GridPane.valignment="CENTER"/>
                        <Label styleClass="hint-label" text="Phone number:" GridPane.halignment="CENTER"
                               GridPane.rowIndex="4" GridPane.valignment="CENTER"/>
                        <Label styleClass="hint-label" text="Balance:" GridPane.halignment="CENTER"
                               GridPane.rowIndex="5" GridPane.valignment="CENTER"/>
                        <Label fx:id="usernameLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Label fx:id="firstNameLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Label fx:id="lastNameLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.rowIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Label fx:id="emailLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Label fx:id="phoneLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                        <Label fx:id="balanceLabel" styleClass="hint-label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                </GridPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
