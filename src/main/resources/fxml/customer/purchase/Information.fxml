<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="view.graphical.purchase.GetInfo" styleClass="background" prefHeight="800.0"
            prefWidth="1200.0">
    <children>
        <GridPane alignment="CENTER" hgap="10.0" layoutX="370.0" layoutY="244.0" vgap="10.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                   prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label styleClass="hint-label" text="Phone number:"/>
                <Label styleClass="hint-label" text="Address:" GridPane.rowIndex="1"/>
                <Label styleClass="hint-label" text="Postal Code:" GridPane.rowIndex="2"/>
                <TextField alignment="CENTER" promptText="Phone Number" GridPane.columnIndex="1" fx:id="phone"/>
                <TextField alignment="CENTER" promptText="Address" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           fx:id="address"/>
                <TextField alignment="CENTER" promptText="Postal Code" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           fx:id="postalCode"/>
                <Label styleClass="error-message-label" fx:id="error" GridPane.rowIndex="3" GridPane.columnSpan="2"
                       wrapText="true"/>
            </children>
        </GridPane>
        <Button layoutX="14.0" layoutY="538.0" mnemonicParsing="false" styleClass="back-button" text="Back"
                AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" onAction="#back"/>
        <Button layoutX="992.0" layoutY="538.0" mnemonicParsing="false" styleClass="forward-button" text="Next"
                AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" onAction="#next"/>
    </children>
    <stylesheets>
        <URL value="@../../Common.css"/>
    </stylesheets>
</AnchorPane>
