<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1200.0" styleClass="background"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="view.graphical.purchase.GetDiscount">
    <stylesheets>
        <URL value="@../../Common.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <GridPane alignment="CENTER" hgap="10.0" layoutX="370.0" layoutY="364.0" prefWidth="500.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="55.0" valignment="CENTER" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="hint-label" text="Discount code:"/>
                <TextField fx:id="discountField" alignment="CENTER" promptText="Discount Code"
                           GridPane.columnIndex="1"/>
                <Label fx:id="error" styleClass="error-message-label"
                       text="If you don't want to use a discount code, just leave the text box empty"
                       textAlignment="CENTER" wrapText="true" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
                       GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <Button layoutX="32.0" layoutY="749.0" mnemonicParsing="false" onAction="#back" styleClass="logout-button"
                text="Close" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
        <Button layoutX="1106.0" layoutY="754.0" mnemonicParsing="false" onAction="#purchase"
                styleClass="forward-button" text="Purchase" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </children>
</AnchorPane>
