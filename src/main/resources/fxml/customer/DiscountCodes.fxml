<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="600.0" minWidth="600.0" styleClass="popup-pane"
            stylesheets="@../Common.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="view.graphical.Customer">
    <bottom>
        <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onCloseClick" styleClass="close-button"
                text="Close" BorderPane.alignment="CENTER"/>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <children>
                <Label styleClass="scene-title" text="Discount Codes"/>
                <ScrollPane prefHeight="450.0" fx:id="discountScrollPane">
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
