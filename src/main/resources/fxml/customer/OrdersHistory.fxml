<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="400.0" minWidth="400.0" styleClass="popup-pane"
            stylesheets="@../Common.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="view.graphical.Customer">
    <bottom>
        <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onCloseClick" styleClass="close-button"
                text="Close" BorderPane.alignment="CENTER"/>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <Label styleClass="scene-title" text="Title" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
                <TableView prefHeight="276.0" prefWidth="776.0" fx:id="ordersHistoryTableView">
                    <columns>
                        <TableColumn prefWidth="100.0" text="Payed money">
                            <cellValueFactory>
                                <PropertyValueFactory property="payedMoney"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="175.0" text="Deducted money on discounts">
                            <cellValueFactory>
                                <PropertyValueFactory property="deductedMoney"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="61.0" text="Sellers">
                            <cellValueFactory>
                                <PropertyValueFactory property="sellersUsername"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="75.0" text="Delivered">
                            <cellValueFactory>
                                <PropertyValueFactory property="isCommodityDelivered"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="75.0" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="logId"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="50.0" text="Date">
                            <cellValueFactory>
                                <PropertyValueFactory property="dateString"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="100.0" text="Commodities">
                            <cellValueFactory>
                                <PropertyValueFactory property="commoditiesNamesString"/>
                            </cellValueFactory>
                        </TableColumn>

                    </columns>
                </TableView>
            </content>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </ScrollPane>
    </center>
</BorderPane>
